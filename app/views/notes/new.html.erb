<div class="d-flex align-items-center justify-content-center">
    <h1 class="title">Creating a New Note<h1> 
</div>

<div class="section">
    <%= simple_form_for [@workspace, @note] do |f|%>
    <div class="field">
        <div class="control">
            <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'}%>
        </div>
    </div>
    <div class="field">
        <div class="control">
            <%= f.input :content, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label'}%>
        </div>
    </div>
    <%= f.button :submit, 'Create new note', class: "button is-primary" %>
    <% end %>
</div>
